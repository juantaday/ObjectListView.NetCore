<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
	<OutputType>Library</OutputType>
	<TargetFramework>net8.0-windows</TargetFramework>
	<Nullable>enable</Nullable>
	<ImplicitUsings>enable</ImplicitUsings>
	<UseWindowsForms>true</UseWindowsForms>
    <Deterministic>false</Deterministic>
    <RootNamespace>BrightIdeasSoftware</RootNamespace>
    <AssemblyName>ObjectListView</AssemblyName>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
	<Version>1.0.1</Version>
	<!-- Versión principal -->
	<FileVersion>1.0.0.1</FileVersion>
	<!-- Versión del archivo -->
	<InformationalVersion>1.0.0-beta</InformationalVersion>
	<!-- Versión informativa, puede ser útil para pre-lanzamientos -->
  </PropertyGroup>

  <ItemGroup>
    <Content Include="..\ObjectListView\Resources\clear-filter.png" Link="Resources\clear-filter.png" />
