    <Content Include="..\ObjectListView\Resources\filter.png" Link="Resources\filter.png" />
    <Content Include="..\ObjectListView\Resources\sort-ascending.png" Link="Resources\sort-ascending.png" />
    <Content Include="..\ObjectListView\Resources\sort-descending.png" Link="Resources\sort-descending.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Text.Json" Version="8.0.5" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Adapters\" />
    <Folder Include="Effects\" />
